{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@ng-boost/core": [
        "dist/core"
      ],
      "@ng-boost/core/*": [
        "dist/core/*"
      ],
      "@ng-boost/material": [
        "dist/material"
      ],
      "@ng-boost/material/*": [
        "dist/material/*"
      ]
    }
  }
}
